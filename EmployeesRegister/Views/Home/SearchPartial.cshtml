@model EmployeesRegister.Models.SearchFilter


    @using (Ajax.BeginForm("Search", "Home", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "employees" }, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            <div class="col-md-4">
                @Html.TextBoxFor(e => e.Filter, new { @class = "form-control", Style = "width: 100%" })
                <br/>
                @Html.ValidationMessageFor(model => model.Filter, null, new { Style = "color: red" })
            </div>
            
            <div class="col-md-offset-1col-md-2">
                <input type="submit" class="btn btn-default" value="Search" />
            </div>
        </div>
    }
